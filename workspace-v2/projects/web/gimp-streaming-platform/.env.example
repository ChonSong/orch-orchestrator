# GIMP Streaming Platform Environment Configuration

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://gimp_user:gimp_password@postgres:5432/gimp_streaming?sslmode=disable
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_password

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=production
APP_PORT=8080
APP_HOST=0.0.0.0
API_VERSION=v1

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# OAuth2 Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# =============================================================================
# Streaming Configuration
# =============================================================================
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=turn:your-turn-server.com:3478
WEBRTC_TURN_USERNAME=turn-username
WEBRTC_TURN_PASSWORD=turn-password

VNC_PASSWORD=vnc_password
VNC_PORT=5901
MAX_SESSIONS_PER_USER=3
SESSION_TIMEOUT=3600

# =============================================================================
# Storage Configuration
# =============================================================================
CLOUD_STORAGE_PROVIDER=aws
STORAGE_BUCKET_NAME=gimp-streaming-files
STORAGE_REGION=us-west-2

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=gimp-streaming-user-files

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET_NAME=gimp-streaming-gcs

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_CONTAINER_NAME=gimp-streaming

# Rclone Configuration
Rclone_CONFIG_PATH=/config/rclone/rclone.conf
RCLONE_CACHE_DIR=/tmp/rclone-cache

# =============================================================================
# Container Configuration
# =============================================================================
KUBERNETES_NAMESPACE=gimp-streaming
GIMP_IMAGE=gimp:latest
STREAMING_IMAGE=streaming-server:latest
GIMP_RESOURCES_CPU=500m
GIMP_RESOURCES_MEMORY=1Gi
GIMP_RESOURCES_GPU=1

# =============================================================================
# Monitoring & Logging
# =============================================================================
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
LOG_LEVEL=info
LOG_FORMAT=json

# Jaeger Tracing
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_SERVICE_NAME=gimp-streaming

# =============================================================================
# Billing Configuration
# =============================================================================
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
SUBSCRIPTION_PRICE_ID=price_your-price-id

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@gimp-streaming.com

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# =============================================================================
# Development Configuration
# =============================================================================
DEV_MODE=false
DEBUG=false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# External Service URLs
# =============================================================================
FRONTEND_URL=https://app.gimp-streaming.com
ADMIN_URL=https://admin.gimp-streaming.com
API_URL=https://api.gimp-streaming.com

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_CONCURRENT_USERS=1000
HEALTH_CHECK_INTERVAL=30s
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_WEBRTC_STREAMING=true
FEATURE_VNC_FALLBACK=true
FEATURE_CLOUD_STORAGE=true
FEATURE_COLLABORATION=false
FEATURE_GPU_ACCELERATION=true